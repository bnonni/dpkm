{
  "compilerOptions": {
    "rootDir": "./src",
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "eslint.config.cjs",
    "node_modules",
    "tests",
    "lib",
    "docs",
    ".well-known",
    "dist",
    "protocols",
    "scripts"
  ]
}